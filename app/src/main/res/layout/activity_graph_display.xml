                    style="@style/tvView"

                    android:layout_weight="1"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="kg/m^3"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/llView"

                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Chemical Admixture"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/chemadVal"
                    style="@style/tvView"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="kg/m^3"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            style="@style/llView"
            android:background="@drawable/shapes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="25dp"
            android:layout_margin="20dp"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="W/c Ratio"
                android:layout_weight="1"
                android:textSize="16sp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/wcratioVal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/tvView"

                android:layout_weight="1"
                android:textSize="16sp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="kg/m^3"
                android:layout_weight="1"
                android:textSize="16sp"
                />

        </LinearLayout>
        <LinearLayout
            style="@style/llView"
            android:background="@drawable/shapes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="25dp"
            android:layout_margin="20dp"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Density"
                android:layout_weight="1"
                android:textSize="16sp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/densityVal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2400"
                style="@style/tvView"
                android:layout_weight="1"
                android:textSize="16sp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="kg/m^3"
                android:layout_weight="1"
                android:textSize="16sp"
                />

        </LinearLayout>
        
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/volumetricBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:text="Volumetric calculation"
            />

