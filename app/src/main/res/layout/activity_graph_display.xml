<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color_main"
    tools:context=".GraphDisplayActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shapes"
            android:layout_margin="20dp"
            android:layout_below="@+id/pieChart"
            >
            <LinearLayout
                style="@style/llView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Cement"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/cementVal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/tvView"

                    android:layout_weight="1"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="kg/m^3"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <LinearLayout
                style="@style/llView"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="GGBS"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ggbsVal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/tvView"

                    android:layout_weight="1"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="kg/m^3"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/llView"

                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Flyash"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/flyashVal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/tvView"

                    android:layout_weight="1"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="kg/m^3"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/llView"

                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Metakoaline"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/metakoalineVal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    style="@style/tvView"

                    android:textSize="16sp" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="kg/m^3"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/llView"

                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rice Husk Ash"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ricehuskVal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
